@section scripts {
    <script>
       

        function disableSubmitButton() {
            var submitButton = document.getElementById("submitButton");
            submitButton.disabled = true; // Disable the button
            // Optionally, display a loading indicator
        }

        function validateDownload() {

            var departmentCode = $('#patientsource2').val();
            if (!departmentCode > 0) {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Select patient source!",
                });
                return true;
            }
            else {

                return false;
            }
        }


        function refreshCaptcha() {
            var $img = $('#captchaContainer img');
            if ($img.length && $img.attr('src')) {
                var src = $img.attr('src');
                var sep = src.indexOf('?') >= 0 ? '&' : '?';
                $img.attr('src', src + sep + '_=' + Date.now());
                $('#DNTCaptchaInputText').val('');
            }
        }

        $(document).ready(function () {
            $('input[name="Patient.PatientLastName"]').focus();

            // Refresh captcha image when "Change Captcha" link is clicked
            $(document).on('click', '#captchaContainer a[href="#refresh"]', function (e) {
                e.preventDefault();
                refreshCaptcha();
            });

            $('#btnDownload').click(function () {

                var selectedValue = document.getElementById("patientsource2").value;
                if (!selectedValue) {
                    //  alert("Please select a patient source ");
                    return false;
                }
                else {

                    downloadData();

                }


            });
        });

        function downloadData() {


            // Method to save data
            var departmentCode = $('#patientsource2').val();

            console.log('downloadData called...');

            // Perform AJAX request to save data
            // Example AJAX request using jQuery:
            $.ajax({
                url: "/Register?handler=DownloadData", // Change the URL to match your controller and action method
                type: 'POST',
                // method: 'OnPostDownloadData',
                data: { departmentCode: departmentCode },
                success: function (response) {
                    // Handle success
                    console.log(response);
                },
                error: function (xhr, status, error) {
                    // Handle error
                    console.error(xhr.responseText);
                }
            });
        }


        $(function () {
            $('#clearForm').click(function () {
                $('form').trigger('reset');
                $('input[name="Patient.PatientLastName"]').focus();
            });

        });

        $(function () {

            // $('#btnSubmit').click(function (e) {
            $('#regForm').submit(function (e) {
                //debugger;
                e.preventDefault();

                var form = $(this);
                if (!form.valid()) {
                return false; // Stop AJAX if client-side validation fails
                }


                    var captchaVal = $("#DNTCaptchaInputText").val().trim();
                    if (captchaVal === "") {
                        // Focus on captcha and show message
                        $("#DNTCaptchaInputText").focus();
                        Swal.fire({
                            icon: 'warning',
                            title: 'Captcha Required',
                            text: 'Please enter the captcha before submitting.'
                        });
                        return false;
                    }

                // Disable the submit button
                $("#btnSubmit").prop("disabled", true);

                //------------------------------------------

              var submitSucceeded = false;
              $.ajax({
                   url: window.location.pathname,
                    type: 'POST',
                    data: form.serialize(),                 
                    success: function (response) {
                        if (response.success) {
                            submitSucceeded = true;
                            Swal.fire({
                                icon: 'success',
                                title: response.message,
                                html: 'Patient No: ' + response.patientNo + '<br>' +
                                      'Patient Name: ' + response.patientFullName
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({ icon: 'warning', title: 'Alert', text: response.message,width: '24em' });
                        }
                    },
                    complete: function () {
                        if (!submitSucceeded) {
                            refreshCaptcha();
                        }
                        $("#btnSubmit").prop("disabled", false);
                    }
                });
            });
        });

    </script>

