    @section styles {
        <style>
            .banner-image {
                display: block;
                height: auto;
                width: 200px;
                margin-bottom: 20px; /* Adjust margin as needed */
            }

            .header {
                display: flex;
                justify-content: space-between; /* logo left, text center, logo right */
                align-items: center;
                padding: 10px;
                flex-wrap: wrap; /* allows wrapping on smaller screens */
            }

                .header img {
                    max-width: 100px; /* scale logos */
                    height: auto;
                }

                .header h1 {
                    flex: 1;
                    text-align: center;
                    font-size: 1.5rem; /* scalable font size */
                    margin: 0;
                }

            @@media (max-width: 768px) {
                .header h1

            {
                font-size: 1.2rem;
            }

            .header img {
                max-width: 70px;
            }

            }

            @@media (max-width: 480px) {
                .header

            {
                flex-direction: column; /* stack vertically */
                text-align: center;
            }

            .header h1 {
                font-size: 1rem;
            }

            }
        </style>
    }

</head>




